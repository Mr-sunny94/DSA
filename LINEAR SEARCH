#include <stdio.h>

int
main() {

  int a[50];

  int n, i, key, flag = 0;

  printf("Enter the number of element: ");

  scanf("%d", & n);

  printf("Enter the Elements: \n");

  for (i = 0; i < n; i++)

  {

    scanf("%d", & a[i]);

  }

  printf("Enter the number to search: ");

  scanf("%d", & key);

  for (i = 0; i < n; i++)

  {

    if (a[i] == key)

    {

      printf("Element found in index %d", i);

      flag = 1;

    }

  }

  if (flag == 0)

  {

    printf("Element not found.");

  }

  return 0;

}
